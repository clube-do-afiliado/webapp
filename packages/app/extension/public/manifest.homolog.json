{
  "manifest_version": 3,
  "name": "STG - Clube do afiliado",
  "version": "1.0.0",
  "description": "STG - Extens√£o para administrar produtos",
  "icons": {
    "16": "icons/extension-STG-16.png",
    "48": "icons/extension-48.png",
    "128": "icons/extension-128.png"
  },
  "permissions": [
    "cookies",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "type": "module"
    }
  ]
}