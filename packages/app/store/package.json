{
  "name": "@cda/store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "rm -rf .next && env-cmd -f .env.dev next dev -p 3002",
    "hmg": "rm -rf .next && env-cmd -f .env.hmg next dev -p 3002",
    "build": "next build",
    "postbuild": "mkdir -p .next/standalone && cp .next/standalone/packages/app/store/server.js .next/standalone/server.js && cp -r .next/static .next/standalone/.next/static",
    "start": "cross-env HOST=127.0.0.1 PORT=3000 && node .next/standalone/packages/app/store/server.js",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "typescript": "^5.8.2",
    "yarn": "^1.22.22"
  }
}
